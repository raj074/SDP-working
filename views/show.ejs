<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 ">
            <% if(post.image){ %>
                <img src="<%= post.image %>" class="img-thumbnail" alt="">
            <% } %>
                    <h3>
                        <%= post.body %>
                    </h3>
                    <form action="/viewPost/<%= post._id %>?_method=DELETE" method="POST">
                        <button>delete post</button>
                    </form>
        </div>
        <div class="col-3">
            <form action="/viewPost/<%= post._id %>/reply" method="POST" class="form validate-form" novalidate>
                <label for="body" class="form-control-label">Reply to this post</label>
                <textarea name="post[body]" id="body" cols="5" rows="10" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <input type="text" name="post[image]" placeholder="image url">
                <button class="btn btn-primary">Post</button>
            </form>
            <div class="mt-3">
                <% for(let reply of post.childReply){ %>
                    <a href="/viewPost/<%= reply._id %> ">
                        <div class="card mb-3">
                            <div class="card-body">
                                <div class="card-text">
                                    <%= reply.body %>
                                </div>


                            </div>
                        </div>
                    </a>
                    <% } %>
            </div>
        </div>
    </div>