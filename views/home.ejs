<% layout('layouts/boilerplate') %>
    <div class="container px-0" style="box-shadow: 10px blue inset;">
            
            <% for(let post of posts){ %>

                <article class="media">
                    <figure class="media-left">
                        <p class="image is-64x64 is-square">
                            <img src="<%= post.author.profile %>" class="is-rounded">
                        </p>
                    </figure>
                    <div class="media-content">
                        <div class="content">
                            <p>
                                <strong><%= post.author.username %></strong>  <small>31m</small>
                                <br>
                                <%= post.body %> 
                                <br>
                                <figure class="image is-2by1">
                                    <img src="<%= post.image %>" alt="">
                                </figure>
                            </p>
                        </div>
                        <nav class="level is-mobile">
                            <div class="level-left">
                                <a class="level-item">
                                    <span class="icon is-medium"><i class="fas fa-lg fa-reply"></i></span>
                                </a>
                                <a class="level-item">
                                    <span class="icon is-medium"><i class="fas fa-lg fa-retweet"></i></span>
                                </a>
                                <a class="level-item">
                                    <span class="icon is-medium"><i class="fas fa-lg fa-heart"></i></span>
                                </a>
                                <a class="level-item" href="/viewpost/<%= post._id %>">
                                    <span class="icon is-medium"><i class="fas fa-lg fa-eye"></i></span>
                                    &nbsp;&nbsp;<p>View Post</p>
                                </a>
                            </div>
                        </nav>
                    </div>
                    
                </article>
